<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/lightGray</item>
        <item name="colorOnPrimary">@color/lightGray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/lightGray</item>
        <item name="colorOnSecondary">@color/lightGray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="item_background">
        <item name="android:background">@drawable/item_background_night</item>
    </style>

    <!--    Floating Action button-->
    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/MyFabOverlay</item>
    </style>

    <style name="MyFabOverlay">
        <item name="colorSecondary">@color/colorPrimary</item>
        <!-- color used by the icon -->
        <item name="colorOnSecondary">@color/white</item>
    </style>


    <!--............................TEXT STYLE............................-->
    <style name="text_bold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="text_normal">
        <item name="android:textColor">@color/lightGray</item>
    </style>
    <!--.................................................................-->


    <!--............................COLORS............................-->
    <color name="background_editText">@color/darkGray</color>
    <color name="red">#FF4646</color>
    <color name="yellow">#FFC114</color>
    <color name="green">#00c980</color>
    <!--.................................................................-->
</resources>